<?xml version="1.0" encoding="UTF-8"?>
<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="addComment"
       startOnLoad="true"
       statistics="disable"
       trace="disable"
       transports="http,https">
   <target>
      <inSequence>
         <property expression="json-eval($.fileId)" name="fileId"/>
         <property expression="json-eval($.commentText)" name="commentText"/>
         <property expression="json-eval($.accessToken)" name="accessToken"/>
         <gdrive.init>
            <accessToken>{$ctx:accessToken}</accessToken>
         </gdrive.init>
         <gdrive.addComment>
            <fileId>{$ctx:fileId}</fileId>
            <commentText>{$ctx:commentText}</commentText>
         </gdrive.addComment>
         <respond/>
      </inSequence>
      <outSequence>
         <log/>
         <send/>
      </outSequence>
   </target>
   <description/>
</proxy>